 @model IEnumerable<BaiLam2.Models.Entity.Products> 
    
    <!-- Begin New Product -->
<div class="content_top">
    <div class="heading">
        @Html.ActionLink("Nguyễn Thị Ngũ", "Create")
    </div>
    <div class="see">
        <p><a href="#">See all Products</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">

    @foreach (var i in Model)
    {
        <div class="grid_1_of_4 images_1_of_4">
            <a href="preview.html"><img src="~/Content/images/@i.Image" alt="" /></a>
            <h2>@i.Name </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">$@i.UnitPrice</span></p>
                </div>
                <div class="add-cart">
                    <h4>@Html.ActionLink("Delete", "Delete", "BaiThi")</h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }
</div>
<!-- End New Product -->