@using PagedList.Mvc
@model IEnumerable<BailLam3.Models.Entity.Products>

@Styles.Render("~/Content/mycss")
@Scripts.Render("~/bundles/js")

<!-- Begin New Product -->
<div class="content_top">
    <div class="heading">
        @Html.ActionLink("Nguyễn Thị Ngũ", "Create")
    </div>
    <div class="see">
        <p><a href="#">See all Products</a></p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var i in Model)
    {
        <div class="grid_1_of_4 images_1_of_4">
            <a href=""><img src="~/Content/images/@i.Image" alt="" /></a>
            <h2>@Html.ActionLink(@i.Name, "Detail", new { id = i.Id }) </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">$@i.UnitPrice</span></p>
                </div>
                <div class="add-cart">
                    <h4>@Html.ActionLink("Delete", "Delete", new { id = i.Id })</h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }

</div>
<!-- End New Product -->
